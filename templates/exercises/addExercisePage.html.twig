{% extends 'base.html.twig' %}

{% block title %}Adaugă exerciti{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles.css') }}">
    <style>
        :root {
            --background-image-url: url('{{ asset('images/HomepageBackground.jpg') }}');
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'homepage/navbar.html.twig' %}
    <div class="form-container">
        <h1 class="mb-5 pt-5">Adaugă exercitii</h1>
        {{ form_start(form) }}
        {{ form_row(form.nume) }}
        {{ form_row(form.link_video) }}
        {{ form_end(form) }}
    </div>
{% endblock %}