{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles.css') }}">
    <style>
        :root {
            --background-image-url: url('{{ asset('images/HomePageBackground.jpg') }}');
        }
    </style>
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="hero-text">
        <p><a href="{{ path('app_homepage_homepage') }}" class="text-decoration-none text-white">Smart<br> Workout</a></p>
    </div>
    <div class="form-container">
        <h1 class="text-white">Autentificare</h1>
    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Nume de utilizator:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}">
        <label for="password">Parola:</label>
        <input type="password" id="password" name="_password">
        <button type="submit">Autentificare</button>
    </form>
        <p class="mt-3 text-center">Nu ai un cont?<br><a href="{{ path('app_register') }}" class="text-white">Înregistrează-te acum</a></p>
    </div>
{% endblock %}